<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.TestsExecutorActivity"
    tools:showIn="@layout/activity_tests_executor">

    <TextView
        android:id="@+id/textView_deviceSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/deviceSelect"
        android:textAppearance="?android:textAppearanceMedium"/>

    <Spinner
        android:id="@+id/spinner_deviceSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_deviceSelect"/>

    <LinearLayout
        android:id="@+id/passiveTest_envelope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner_deviceSelect"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/passiveTest_textViews_envelope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_passiveTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passiveTest"
                android:textAppearance="?android:textAppearanceMedium"/>

            <TextView
                android:id="@+id/textView_passiveTest_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_description"
                android:textAppearance="?android:textAppearanceSmall"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Switch
            android:id="@+id/switch_passiveTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activeTest_envelope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passiveTest_envelope"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activeTest_textViews_envelope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_activeTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activeTest"
                android:textAppearance="?android:textAppearanceMedium"/>

            <TextView
                android:id="@+id/textView_activeTest_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_description"
                android:textAppearance="?android:textAppearanceSmall"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Switch
            android:id="@+id/switch_activeTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_activeTestType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activeTest_envelope"
        android:text="@string/activeTestType"
        android:textAppearance="?android:textAppearanceMedium"/>

    <Spinner
        android:id="@+id/spinner_activeTestType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_activeTestType"/>

